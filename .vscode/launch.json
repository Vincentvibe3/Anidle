    "version": "0.2.0",
    "configurations": [
        {
            "name":"Start sveltekit",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "console":"internalConsole",
            "envFile": "${workspaceFolder}/.env"
        },

        {
            "name":"Build Production",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "build"],
            "console":"integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        },

        {
            "name":"Run Production",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "preview"],
            "console":"internalConsole",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name":"Get Anime List",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "node",
            "runtimeArgs": ["${workspaceFolder}/songFetching/app.js", "--initial"],
            "console":"internalConsole",
            "envFile": "${workspaceFolder}/songFetching/.env",
            "outputCapture": "std"
        }
    ]
}